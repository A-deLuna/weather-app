<div class="container mx-auto text-center">
  <div class="flex flex-col items-center">
    <h1 class="text-xl font-semibold tracking-tight leading-7 text-cyan-800 sm:text-2xl md:text-4xl" id="address"><%= @address %></h1>
    <h2 class="text-xl font-semibold leading-7 text-cyan-700 pt-6" id="date-now"> <%= weekday_month_and_day @forecast.today.date %> </h2>
    <%= image_tag @forecast.today.icon, class: "" %>
    <h2 class="text-xl font-bold leading-7 text-cyan-700 pt-4" id="temp-now" >Now: <%= @forecast.today.now %> </h2>
    <div class="flex flex-row justify-center">
      <h2 class="text-l  text-cyan-700 pt-3" id="temp-low" >Low: <%= @forecast.today.low %> </h2>
      <h2 class="text-l  text-cyan-700 pt-3 pl-4" id="temp-high" >High: <%= @forecast.today.high %> </h2>
    </div>
  </div>
  <div class="flex flex-row pt-10" id="daily">
    <%= render partial:"forecast", collection:  @forecast.daily  %>
  </div>
</div>
